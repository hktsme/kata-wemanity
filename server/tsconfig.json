{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "sourceMap": true,
        "allowJs": true,
        "paths": {
            "@lib/*": [
                "lib/*"
            ],
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "reflect-metadata",
            "knex",
            "node",
            "express"
        ],
        "lib": [
            "esnext.asynciterable",
            "es2015",
            "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "../node_modules/*",
        "test/**/*.ts"
    ]
}